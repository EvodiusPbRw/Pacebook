<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item><!-- @color/colorPrimary-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!-- @color/colorPrimaryDark -->
        <item name="colorAccent">@color/colorAccent</item><!-- @color/colorAccent-->
    </style>

    <style name="ActionbarText">
        <item name="android:textColor">#1778F3</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/klavika_bold</item>
    </style>
    
    <style name="rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.PopupComment">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


</resources>